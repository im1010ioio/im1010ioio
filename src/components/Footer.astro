---
import { SITE_BASE, SocialLinks, WebsiteLinks } from '../consts'
import LogoSVG from '../assets/logo.svg'
import { Icon } from 'astro-icon/components'

const today = new Date()
---

<footer>
	<div
		class="app-container grid md:grid-cols-3 gap-12 py-16 border-t-2 border-foreground/50 dark:border-foreground-dark/50"
	>
		<div>
			<a href={`${SITE_BASE}`} class="block w-fit" aria-label="Home">
				<LogoSVG height={36} width={36} />
			</a>
		</div>
		<div>
			<h3 class="font-semibold text-2xl">網站連結</h3>
			<div class="flex flex-wrap gap-4 mt-4">
				{
					WebsiteLinks.filter((link) => link.name !== 'Home').map((link) => (
						<a
							href={link.url}
							class="hover:underline hover:text-primary dark:hover:text-primary-dark"
							rel="noopener noreferrer"
						>
							{link.name}
						</a>
					))
				}
				<a
					href="rss.xml"
					target="_blank"
					rel="noopener noreferrer"
					class="text-lg hover:text-primary dark:hover:text-primary-dark"
					aria-label="RSS Feed"
				>
					<Icon name="mdi:rss" class="w-6 h-6" />
				</a>
			</div>
		</div>
		<div>
			<h3 class="font-semibold text-2xl">社群</h3>
			<div class="flex flex-wrap gap-4 mt-4">
				{
					SocialLinks.map((link) => (
						<a
							href={link.url}
							class="hover:underline hover:text-primary dark:hover:text-primary-dark"
							target="_blank"
							rel="noopener noreferrer"
						>
							{link.name}
						</a>
					))
				}
			</div>
		</div>
	</div>
	<div class="app-container flex justify-between items-center pb-6 text-center">
		<p class="text-left md:text-center w-full opacity-70 text-sm">
			&copy; {today.getFullYear()} im1010ioio. All rights reserved.
		</p>
	</div>
</footer>
